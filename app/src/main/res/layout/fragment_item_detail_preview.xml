<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".unused.ItemDetailPreview"
    android:padding="16dp"
    android:background="#FBFBFB">

     <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/kopi1"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:contentDescription="@string/item_image_desc"/>

    <!-- Tiêu đề của mục -->
    <TextView
        android:id="@+id/title_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="MỤC"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <!-- Mô tả của mục -->
    <TextView
        android:id="@+id/detail_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Mô tả"
        android:textSize="16sp"
        android:textColor="@color/black"
        />

    <!-- Nút để thêm mục vào giỏ hàng -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/detail_tambah"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Thêm vào giỏ hàng"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@color/coklat_soft"
        />
</LinearLayout>

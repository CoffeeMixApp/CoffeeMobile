<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    tools:context=".unused.CartFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        
        android:gravity="center"
        android:text="GIỎ HÀNG"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_carts"
        android:layout_width="match_parent"
        android:layout_height="509dp"
        android:layout_above="@+id/tv_ongkos_kirim"
        android:layout_below="@+id/tv_cart"
        android:layout_marginBottom="11dp" />

    <TextView
        
        android:id="@+id/tv_shipping_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Tiền ship: "
        android:layout_above="@id/tv_subtotal"/>

    <TextView
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_subtotal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="5dp"
        android:gravity="right"
        android:text="vnd 50 000"
        android:textColor="@color/black"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/tv_subtotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        
        android:textColor="@color/black"
        android:text="Subtotal"
        android:layout_above="@id/cart_checkout"/>

    <TextView
        
        android:id="@+id/cart_subtotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/cart_checkout"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="right"
        android:text="VND 0"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatButton
        
        android:id="@+id/cart_checkout"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/coklat_soft"
        android:text="Checkout"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22sp" />




</RelativeLayout>